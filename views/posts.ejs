<%- include("header",{type:'all'}) %>
<div class="fh5co-loader"></div>

	<div id="page">
		<div id="fh5co-aside" style="background-image: url(images/main.jpg)">
			<div class="overlay"></div>
			<nav role="navigation">
				<ul>
					<li><a href="index.html"><i class="icon-home"></i></a></li>
				</ul>
			</nav>
			<div class="featured">
				<span>
					<% if(session.user){ %>
						<a href="/create">发表文章</a> <a href="/signout">登出</a>
					<% }else{ %>
						<a href="/signin">登录</a> <a href="/signup">注册</a>
					<% } %>
				</span>
				<h2>KNOW MORE，DO MORE，BE MORE</a></h2>
			</div>
		</div>
		<div id="fh5co-main-content">
			<div class="fh5co-post">

				<% posts.forEach(function(res){ %>
					<div class="fh5co-entry padding">
						<img src="images/<%= res.avator %>" alt="<%= res.name %>">
						<div>
							<span class="post-date"><%= res.moment %></span>
							<h2><a href="/posts/<%= res.id %>"><%- res.title %></a></h2>
							<p class="post-footer">
								<span>评论数：<%= res.comments %></span>
								<span>浏览量：<%= res.pv %></span>
							</p>
						</div>
					</div>
				<% }) %>

				<footer>
					<div>
					&copy; 2018 Steinitz@qq.com  All Rights Reserved
					</div>
				</footer>
			</div>
		</div>
	</div>

	<div class="gototop js-top">
		<a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
	</div>

	<!-- jQuery -->
	<script src="js/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script src="js/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script src="js/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script src="js/jquery.waypoints.min.js"></script>
	<!-- Stellar Parallax -->
	<script src="js/jquery.stellar.min.js"></script>
	<!-- Main -->
	<script src="js/main.js"></script>

<% include footer %>
